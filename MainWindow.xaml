<Window x:Class="tiktaktó.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tik-Tak-Tó" Height="500" Width="450"
        ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen">
    <Grid Background="#F0F0F0">
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock x:Name="StatusText" 
                       Text="X játékos következik" 
                       FontSize="24" 
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Foreground="#333"/>
        </StackPanel>

        <Grid Grid.Row="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>


            <Button x:Name="Btn00" Grid.Row="0" Grid.Column="0" 
                    Click="Button_Click" Tag="0,0"
                    FontSize="48" FontWeight="Bold"
                    Background="White" Margin="5"
                    BorderBrush="#999" BorderThickness="2"/>
            <Button x:Name="Btn01" Grid.Row="0" Grid.Column="1" 
                    Click="Button_Click" Tag="0,1"
                    FontSize="48" FontWeight="Bold"
                    Background="White" Margin="5"
                    BorderBrush="#999" BorderThickness="2"/>
            <Button x:Name="Btn02" Grid.Row="0" Grid.Column="2" 
                    Click="Button_Click" Tag="0,2"
                    FontSize="48" FontWeight="Bold"
                    Background="White" Margin="5"
                    BorderBrush="#999" BorderThickness="2"/>


            <Button x:Name="Btn10" Grid.Row="1" Grid.Column="0" 
                    Click="Button_Click" Tag="1,0"
                    FontSize="48" FontWeight="Bold"
                    Background="White" Margin="5"
                    BorderBrush="#999" BorderThickness="2"/>
            <Button x:Name="Btn11" Grid.Row="1" Grid.Column="1" 
                    Click="Button_Click" Tag="1,1"
                    FontSize="48" FontWeight="Bold"
                    Background="White" Margin="5"
                    BorderBrush="#999" BorderThickness="2"/>
            <Button x:Name="Btn12" Grid.Row="1" Grid.Column="2" 
                    Click="Button_Click" Tag="1,2"
                    FontSize="48" FontWeight="Bold"
                    Background="White" Margin="5"
                    BorderBrush="#999" BorderThickness="2"/>

            <Button x:Name="Btn20" Grid.Row="2" Grid.Column="0" 
                    Click="Button_Click" Tag="2,0"
                    FontSize="48" FontWeight="Bold"
                    Background="White" Margin="5"
                    BorderBrush="#999" BorderThickness="2"/>
            <Button x:Name="Btn21" Grid.Row="2" Grid.Column="1" 
                    Click="Button_Click" Tag="2,1"
                    FontSize="48" FontWeight="Bold"
                    Background="White" Margin="5"
                    BorderBrush="#999" BorderThickness="2"/>
            <Button x:Name="Btn22" Grid.Row="2" Grid.Column="2" 
                    Click="Button_Click" Tag="2,2"
                    FontSize="48" FontWeight="Bold"
                    Background="White" Margin="5"
                    BorderBrush="#999" BorderThickness="2"/>
        </Grid>
        <Button Grid.Row="2" 
                Content="Új játék" 
                Click="ResetButton_Click"
                Width="150" Height="40"
                FontSize="16" FontWeight="Bold"
                Background="#4CAF50" Foreground="White"
                BorderThickness="0"
                Cursor="Hand"/>
    </Grid>
</Window>